{
  "compilerOptions": {
  "target": "es2017",
  "module": "commonjs",
  "outDir": "./build/server",
  "noImplicitAny": false,
  "sourceMap": true,
  "declaration": false,
  "moduleResolution": "node",
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true,
  "typeRoots": [
    "node_modules/@types"
  ],
  "lib": [
    "es2017",
    "dom"
  ],
  },
  "exclude": [
    "node_modules",
    ".vscode",
    "**/*.spec.ts"
  ]
}